{
  "name": "instagram_backend",
  "version": "1.0.0",
  "description": "Backend apis for instagram clone",
  "main": "app.js",
  "scripts": {
    "start": "nodemon src/app.ts",
    "test": "mocha --require ts-node/register  './src/test/unit_test/**/*.test.ts'",
    "test:integration": "mocha --require ts-node/register  './src/test/integration_test/**/*.test.ts'",
    "knex": "knex  --knexfile='./src/knexfile.ts'",
    "migrate:make": "npm run knex migrate:make --verbose",
    "migrate": "npm run knex migrate:latest --verbose",
    "rollback": "npm run knex migrate:rollback --verbose",
    "seed:make": "npm run knex seed:make --verbose",
    "seed:run": "npm run knex seed:run --verbose"
  },
  "author": "",
  "license": "ISC",
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "camelize": "^1.0.1",
    "cloudinary": "^2.3.1",
    "cookie-parser": "^1.4.6",
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "express": "^4.19.2",
    "http-status-codes": "^2.3.0",
    "joi": "^17.13.3",
    "jsonwebtoken": "^9.0.2",
    "knex": "^3.1.0",
    "multer": "^1.4.5-lts.1",
    "nodemailer": "^6.9.14",
    "pg": "^8.12.0",
    "to-snake-case": "^1.0.0",
    "unique-username-generator": "^1.3.0",
    "winston": "^3.13.1"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.6",
    "@types/camelize": "^1.0.0",
    "@types/cookie-parser": "^1.4.7",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/jsonwebtoken": "^9.0.6",
    "@types/mocha": "^10.0.7",
    "@types/multer": "^1.4.11",
    "@types/node": "^20.14.10",
    "@types/pg": "^8.11.6",
    "@types/sinon": "^17.0.3",
    "@types/supertest": "^6.0.2",
    "@types/to-snake-case": "^1.0.2",
    "expect": "^29.7.0",
    "mocha": "^10.6.0",
    "nodemon": "^3.1.4",
    "sinon": "^18.0.0",
    "supertest": "^7.0.0",
    "ts-node": "^10.9.2",
    "typescript": "^5.5.3"
  }
}
